alias c="clear"
alias vim='nvim'
alias vi='vim'
alias ls='ls --color=auto'
alias k='kubectl'
alias h='helm'

export RIPGREP_CONFIG_PATH="$HOME/.ripgreprc"

function gi() { curl -sLw "\n" https://www.toptal.com/developers/gitignore/api/$@ ;}

git-new-repo() {
  randomRepoName=$RANDOM
  read -e -p "Please provide repo name: " -i $randomRepoName REPONAME
  curl -L \
  -X POST \
  -H "Accept: application/vnd.github+json" \
  -H "Authorization: Bearer $GIT_API_TOKEN" \
  -H "X-GitHub-Api-Version: 2022-11-28" \
  https://api.github.com/user/repos \
  -d '{"name":"'${REPONAME,,}'","description":"This is your '${REPONAME,,}' repo!","homepage":"https://github.com","private":false}' && \
  git clone git@github.com:angrypointer/${REPONAME,,}.git
}
